<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    
    <Color x:Key="ForegroundColor">Black</Color>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    
    <Color x:Key="BackgroundColor">Gray</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource ForegroundColor}" />

    <Color x:Key="MediumColor">White</Color>
    <SolidColorBrush x:Key="MediumBrush" Color="{StaticResource MediumColor}" />

    <Color x:Key="HighlightColor">Yellow</Color>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}" />

    <Color x:Key="DimColor">Blue</Color>
    <SolidColorBrush x:Key="DimBrush" Color="{StaticResource DimColor}" />
</ResourceDictionary>